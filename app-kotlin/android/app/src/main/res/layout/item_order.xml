<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pedido #123"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ea580c" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendente"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:background="#ffedd5"
                    android:textColor="#c2410c"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <ImageButton
                    android:id="@+id/btn_whatsapp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_whatsapp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Abrir WhatsApp para este cliente"
                    android:padding="4dp"
                    app:tint="#25D366" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/order_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pedido às 19:45"
            android:textSize="13sp"
            android:textColor="#6b7280" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliente: João"
            android:layout_marginTop="6dp"
            android:textColor="#1f2937" />

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tel: (11) 99999-9999"
            android:layout_marginTop="2dp"
            android:textSize="13sp"
            android:textColor="#6b7280" />

        <TextView
            android:id="@+id/order_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: R$ 50,00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#ea580c" />

        <!-- Botões de ação: ícone + label claro (Material 3) -->
        <LinearLayout
            android:id="@+id/order_actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_imprimir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Imprimir"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/ic_receipt"
                android:drawablePadding="4dp"
                android:drawableTint="#ffffff"
                android:backgroundTint="#ea580c"
                android:textColor="#ffffff"
                android:layout_marginEnd="4dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enviar"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/ic_send"
                android:drawablePadding="4dp"
                android:drawableTint="#ffffff"
                android:backgroundTint="#0d9488"
                android:textColor="#ffffff"
                android:layout_marginEnd="4dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btn_editar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/ic_menu"
                android:drawablePadding="4dp"
                android:drawableTint="#ffffff"
                android:backgroundTint="#6366f1"
                android:textColor="#ffffff"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <Button
                android:id="@+id/confirm_delivery_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✓ Entregue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#10b981"
                android:textColor="#ffffff"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/report_problem_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✗ Problema"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#ef4444"
                android:textColor="#ffffff"
                android:padding="12dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
