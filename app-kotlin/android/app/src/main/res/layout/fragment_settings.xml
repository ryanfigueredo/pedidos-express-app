<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7ed"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff7ed"
        android:padding="20dp"
        android:paddingBottom="32dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textColor="#ea580c" />

        <!-- Card de Informações do Usuário -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações do Usuário"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ea580c"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f4f6"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de nome" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_badge"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de função" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Função"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/user_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tag"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de email" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="14sp"
                            android:textColor="#6b7280" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Status da Loja -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status da Loja"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ea580c"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f4f6"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Loja Aberta"
                        android:textSize="16sp"
                        android:textColor="#111827" />

                    <Switch
                        android:id="@+id/is_open_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/store_closed_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quando fechada: informe o horário de abertura ou mensagem (ex: Abre às 18h)"
                    android:textSize="12sp"
                    android:textColor="#6b7280"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/store_closed_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:inputType="textCapSentences"
                    android:hint="Ex: Abre às 18h | Amanhã 12h"
                    android:padding="12dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/save_store_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#ea580c"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <ProgressBar
                    android:id="@+id/store_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Assinatura/Plano -->
        <androidx.cardview.widget.CardView
            android:id="@+id/subscription_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assinatura e Plano"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ea580c"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f3f4f6"
                    android:layout_marginBottom="16dp" />

                <!-- Plano -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_badge"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de plano" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plano Atual"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/subscription_plan_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carregando..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Data de Pagamento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de data" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Último Pagamento"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/subscription_payment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carregando..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Vencimento -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Ícone de vencimento" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vencimento"
                            android:textSize="12sp"
                            android:textColor="#6b7280"
                            android:layout_marginBottom="2dp" />

                        <TextView
                            android:id="@+id/subscription_expires_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carregando..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#111827" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Aviso de Vencimento -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/subscription_warning_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fef3c7"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/subscription_warning_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#92400e"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Botão de Pagamento -->
                <Button
                    android:id="@+id/subscription_payment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pagar via PIX"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#10b981"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button" />

                <ProgressBar
                    android:id="@+id/subscription_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botão de Logout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="16dp">

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sair da Conta"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ef4444"
                android:background="@drawable/button_outlined_red"
                android:padding="18dp"
                android:layout_margin="8dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
