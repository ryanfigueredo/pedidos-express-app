<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7ed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Lista de Conversas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:background="#ffffff">

        <TextView
            android:id="@+id/title_atendimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atendimento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ea580c"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:background="#ffffff"
            android:maxLines="1"
            android:ellipsize="none" />

        <TextView
            android:id="@+id/subtitle_conversas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Todas as conversas com o bot"
            android:textSize="12sp"
            android:textColor="#6b7280"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:background="#ffffff" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/conversations_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

        <!-- Chat -->
        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.65"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:visibility="gone">

        <!-- Header do Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            android:elevation="2dp">

            <!-- Título Atendimento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical|start">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Voltar para lista de conversas"
                    app:tint="#ea580c" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atendimento"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#ea580c"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/whatsapp_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_whatsapp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Abrir WhatsApp"
                    android:visibility="gone"
                    app:tint="#25D366" />

            </LinearLayout>

            <!-- Informações da conversa -->
            <TextView
                android:id="@+id/chat_header_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione uma conversa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1f2937"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="start|center_vertical" />

        </LinearLayout>

        <!-- Mensagens -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:clipToPadding="false" />

        <!-- Input de Mensagem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/message_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Digite sua mensagem..."
                android:maxLines="4"
                android:minLines="1"
                android:inputType="textCapSentences|textMultiLine"
                android:imeOptions="actionSend"
                android:background="@drawable/message_input_background"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="#1f2937"
                android:textColorHint="#9ca3af"
                android:focusableInTouchMode="true" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="8dp"
                android:contentDescription="Enviar mensagem"
                app:tint="#ea580c" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Empty State (mostra quando não há conversas ou ao carregar) -->
    <FrameLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff7ed"
        android:visibility="visible">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✓"
            android:textSize="48sp"
            android:textColor="#10b981"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma conversa ainda"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1f2937"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As conversas dos clientes com o bot aparecerão aqui"
            android:textSize="14sp"
            android:textColor="#6b7280"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_iniciar_atendimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar atendimento com número"
            android:textSize="14sp"
            android:backgroundTint="#ea580c"
            android:textColor="#ffffff"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>
        
    </FrameLayout>

</FrameLayout>
