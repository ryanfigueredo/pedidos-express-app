<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_top_app_bar"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="20dp"
    android:minHeight="72dp">

    <!-- Botão de ação inicial (opcional) -->
    <ImageButton
        android:id="@+id/start_action_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/action_button"
        android:scaleType="centerInside"
        android:tint="#ffffff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_text" />

    <!-- Título centralizado -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:fontFamily="@font/poppins_family"
        android:typeface="normal"
        app:layout_constraintStart_toEndOf="@id/start_action_button"
        app:layout_constraintEnd_toStartOf="@id/end_action_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subtitle_text"
        tools:text="Pedidos" />

    <!-- Subtítulo (opcional, ex: contador de pedidos) -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:textStyle="normal"
        android:gravity="center"
        android:alpha="0.9"
        android:fontFamily="@font/inter_family"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/title_text"
        app:layout_constraintEnd_toEndOf="@id/title_text"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="(6)"
        tools:visibility="visible" />

    <!-- Botão de ação final (opcional) -->
    <ImageButton
        android:id="@+id/end_action_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/action_button"
        android:scaleType="centerInside"
        android:tint="#ffffff"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
